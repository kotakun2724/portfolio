---
import Layout from '../layouts/Layout.astro';
import { profile } from '../content/profile';
---

<Layout
  title="About"
  description={`About ${profile.name}. ${profile.summary}`}
  pathname="/about"
>
  <div class="container">
    <section class="hero" style="padding-bottom: 10px;" data-reveal>
      <div class="kicker">About</div>
      <h1 class="h1" style="margin-bottom: 6px;">{profile.name}</h1>
      <p class="lead">{profile.summary}</p>
    </section>

    <section class="section" data-reveal>
      <div class="grid">
        <div class="col6">
          <div class="card">
            <h2 class="h2">Bio</h2>
            <div class="muted" style="margin-top: 10px; display: grid; gap: 10px;">
              {profile.bio.map((p) => (
                <p style="margin: 0;">{p}</p>
              ))}
            </div>
          </div>
        </div>

        <div class="col6">
          <div class="card">
            <h2 class="h2">Highlights</h2>
            <ul class="muted" style="margin: 10px 0 0; padding-left: 18px;">
              {profile.highlights.map((h) => (
                <li>{h}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="section" data-reveal>
      <div class="sectionHeader">
        <h2 class="h2">Skills</h2>
      </div>
      <div class="grid">
        <div class="col6">
          <div class="card">
            <div class="kicker">Primary</div>
            <div class="badgeRow">
              {profile.skills.primary.map((s) => (
                <span class="badge">{s}</span>
              ))}
            </div>
          </div>
        </div>
        <div class="col6">
          <div class="card">
            <div class="kicker">Tools</div>
            <div class="badgeRow">
              {profile.skills.tools.map((s) => (
                <span class="badge">{s}</span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>


